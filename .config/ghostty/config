# visuals
font-family = "CommitMono"
font-family = "Symbols Nerd Font Mono" # fallback
font-size = 20
macos-window-shadow = false
mouse-hide-while-typing = true
theme = light:catppuccin-latte,dark:catppuccin-mocha
window-decoration = false
window-padding-x = 16
window-padding-y = 10

# clipboard
clipboard-read = "allow"
clipboard-trim-trailing-spaces = true
clipboard-write = "allow"

# keybindings

# a-z
# keybind = super+a= # select all?
# keybind = super+b= # build?
# keybind = super+c= # copy
# keybind = super+d=
# keybind = super+e=
keybind = super+f=text:\x3a\x47\x72\x65\x70\x0a # :Grep (find)
keybind = super+g=text:\x02\x67 # <perfix>+g (open lazygit window)
# keybind = super+h= # hide?
# keybind = super+i=
# keybind = super+j=
keybind = super+k=text:\x02\x4b # <perfix>+k (open sesh picker)
keybind = super+l=text:\x02\x4c # <perfix>+l (switch to last session)
# keybind = super+m= # minimize?
# keybind = super+n= # new?
keybind = super+o=text:\x02\x75 # <perfix>+u
keybind = super+p=text:\x3a\x47\x6f\x54\x6f\x46\x69\x6c\x65\x0a # :GotoFile
keybind = super+q=text:\x3a\x1b\x1b\x3a\x71\x61\x21\x0a # :qa!
# keybind = super+r= (refresh?)
keybind = super+s=text:\x3a\x77\x0a # :w (write buffer)
keybind = super+t=text:\x02\x63 # <perfix>+c (new window)
# keybind = super+u=
# keybind = super+v= # paste
keybind = super+w=text:\x02\x78 # <perfix>+x (close window)
# keybind = super+x= # cut
# keybind = super+y=
# keybind = super+z= # undo?

# A-Z
# keybind = super+shift+a=

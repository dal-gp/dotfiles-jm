#!/usr/bin/env bash

brew update
outdated=$(brew outdated)
if [[ -n "$outdated" ]]; then
	read -rp "Upgrade the listed above (y/N)? " upgrade
	if [[ "$upgrade" = "y" ]]; then
		brew upgrade
		brew cleanup --prune=all
		brew doctor
	else
		echo "Upgrading brew packages cancelled."
	fi
else
	echo "No brew packages need upgraded at this time."
fi
